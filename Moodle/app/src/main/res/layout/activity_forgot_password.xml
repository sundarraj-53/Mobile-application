<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profilebkg"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backbtn"
            android:src="@drawable/baseline_keyboard_backspace_24"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label1Tv"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="28sp"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:layout_below="@+id/backbtn"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label2Tv"
            android:text="Enter Your registered email address to receive Mail for reset your password"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/label1Tv"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="285dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailTill"
                app:hintEnabled="false">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailEt"
                    android:background="@drawable/white_bg"
                    android:drawableStart="@drawable/baseline_mail_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:hint="Enter Your registered Email"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitBtn"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/emailTill"
                android:text="Send Email"
                android:textColor="@color/white"
                android:background="@drawable/white_bg"
                />
        </RelativeLayout>
</RelativeLayout>