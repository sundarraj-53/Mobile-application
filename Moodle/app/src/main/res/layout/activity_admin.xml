<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            />
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="30dp"
        android:id="@+id/card"
        app:cardElevation="20dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/lavender"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Course"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            />
        <EditText
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:hint="New Course"
            android:textColorHint="#838080"
            android:textColor="@color/black"
            android:id="@+id/newcourse"
            android:background="@drawable/dummy"
            android:layout_marginTop="50dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/pin"
            android:layout_below="@+id/bgDescription"
            android:text="Select Pdf"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pin"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:backgroundTint="#9C9A9A"
            android:text="Add the Course" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="120dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:text="Category"
            android:layout_gravity="right"
            android:layout_below="@+id/card"
            android:backgroundTint="@color/lavender"
            android:id="@+id/NewCategory"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="left"
        >
        <include
            layout="@layout/nav2"
            />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>