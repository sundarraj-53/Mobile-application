<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/toolbar"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp"
            android:layout_marginTop="125dp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawable="@drawable/baseline_attach_file_24"
                    android:id="@+id/pin"
                    android:layout_marginLeft="400dp"
                    />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add a New book"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:id="@+id/newBk"
                    android:textColor="@color/lavender"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="25dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/EditText"
                    android:layout_below="@+id/newBk"
                    android:background="@drawable/custom"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/baseline_picture_as_pdf_24"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:hint="Book Title"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_below="@id/EditText"
                    android:id="@+id/bgDescription"
                    android:drawableLeft="@drawable/baseline_create_24"
                    android:background="@drawable/custom"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:hint="Book Description"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/pin"
                    android:layout_below="@+id/bgDescription"
                    android:text="Select Pdf"
                    android:backgroundTint="@color/lavender"
                    android:layout_marginTop="40dp"
                    android:padding="5dp"
                    />
                <Button
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Upload"
                    android:id="@+id/Upload"
                    android:layout_below="@+id/pin"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/lavender"
                   android:layout_gravity="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="left"
        >
        <include
            layout="@layout/nav2"
            />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>